{
  "name": "devosaurus",
  "version": "0.1.2",
  "type": "module",
  "description": "TypeScript library for voice-controlling web applications",
  "author": "Daniel Angel Arro",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/danielangelarro/devosaurus"
  },
  "bugs": {
    "url": "https://github.com/danielangelarro/devosaurus/issues"
  },
  "homepage": "https://github.com/danielangelarro/devosaurus#readme",
  "keywords": [
    "voice-control",
    "speech-recognition",
    "web-speech-api",
    "accessibility",
    "automation",
    "commands",
    "voice-commands",
    "typescript",
    "browser",
    "web"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:serve": "pnpm build && npx serve .",
    "test:local": "pnpm build && node test-server.cjs"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "serve": "^14.2.5",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}